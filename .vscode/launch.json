    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch OpenGL Renderer",
            "type": "lldb",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "environment": [],
            "program": "${workspaceFolder}/build/opengl_renderer",
            "osx": {
                "MIMode": "lldb",
                "targetArchitecture": "arm64",
                "externalConsole": false,
            },
            "linux": {
                "externalConsole": false,
                // "environment": [
                //     { "name": "VK_LOADER_DEBUG", "value": "all"}
                // ]
            },
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/build/opengl_renderer.exe",
                // cppvsdbg requires this instead of externalConsole
                "console": "integratedTerminal",
            },
        },
        {
            "name": "Launch Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/opengl_renderer_tester",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "osx": {
                "MIMode": "lldb",
                "targetArchitecture": "arm64",
                "externalConsole": false,
            },
            "linux": {
                "externalConsole": false,
            },
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/build/opengl_renderer_tester.exe",
                // cppvsdbg requires this instead of externalConsole
                "console": "integratedTerminal",
            }
        }
    ]
}