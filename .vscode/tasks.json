{
    "tasks": [
        {
            "type": "shell",
            "label": "Build (Debug)",
            "command": "${workspaceFolder}/build.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build (Tests)",
            "command": "${workspaceFolder}/build_test.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "${workspaceFolder}/build_test.bat"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}