# Shadow map shader configuration (depth-only, opaque casters)

version=1.0
name=shader.shadow.opaque
renderpass=Renderpass.CSM.Shadow
stages=vertex,fragment
stagefiles=assets/shaders/shadow_opaque.spv
use_instance=0
use_local=1

# Vertex attributes
attribute=vec3,in_position

# Local (push constants): per-cascade light VP
uniform=mat4,2,light_view_projection

# Cull front faces to remove self-shadowing artifacts
cull_mode=front
